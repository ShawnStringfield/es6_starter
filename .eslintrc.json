{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jquery": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:import/warnings"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"indent": [2, "tab"],
		"space-in-parens": [1, "always", {
			"exceptions": ["{}"]
		}],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	},
	"globals": {}
}
